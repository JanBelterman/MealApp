@model MealDate

<h5 class="card-title">@Model.Meal?.Name</h5>
<p class="card-text">@Model.Meal?.Description</p>
<p class="card-text">@Model.Meal?.DateTime.ToShortTimeString()</p>
<p class="card-text">@Model.Meal?.StudentCook?.Name</p>

@if (!Model.UserIsRegistered) {

    <form asp-action="Register" method="post">

        <input type="hidden" asp-for="Meal.Id" value=@Model.Meal.Id />

        <button type="submit" class="btn btn-success">
            Mee eten <span class="badge badge-light">@(Model.Meal?.StudentsGuests?.Count() ?? 0)</span>
        </button>


    </form>

} else {

    <form asp-action="Cancel" method="post">

        <input type="hidden" asp-for="Meal.Id" value=@Model.Meal.Id />

        <button type="submit" class="btn btn-danger">
            Afzeggen <span class="badge badge-light">@(Model.Meal?.StudentsGuests?.Count() ?? 0)</span>
        </button>

    </form>

}